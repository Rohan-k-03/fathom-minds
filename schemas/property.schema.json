{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sample Properties file",
    "type": "object",
    "additionalProperties": false,
    "required": ["properties"],
    "properties": {
      "properties": {
        "type": "array",
        "minItems": 3,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "id",
            "label",
            "zone",
            "lot_size_m2",
            "frontage_m",
            "corner_lot",
            "setbacks_m"
          ],
          "properties": {
            "id": { "type": "string", "pattern": "^[A-Z]+-[0-9]{3}$" },
            "label": { "type": "string", "minLength": 3 },
            "zone": { "type": "string", "minLength": 1 },
            "lot_size_m2": { "type": "number", "exclusiveMinimum": 0 },
            "frontage_m": { "type": "number", "exclusiveMinimum": 0 },
            "corner_lot": { "type": "boolean" },
            "setbacks_m": {
              "type": "object",
              "additionalProperties": false,
              "required": ["front", "left", "right", "rear"],
              "properties": {
                "front": { "type": "number", "minimum": 0 },
                "secondary_front": { "type": "number", "minimum": 0 },
                "left": { "type": "number", "minimum": 0 },
                "right": { "type": "number", "minimum": 0 },
                "rear": { "type": "number", "minimum": 0 }
              }
            },
            "notes": { "type": "string" }
          },
          "allOf": [
            {
              "if": { "properties": { "corner_lot": { "const": true } } },
              "then": {
                "properties": {
                  "setbacks_m": {
                    "type": "object",
                    "required": ["secondary_front"]
                  }
                }
              }
            },
            {
              "if": { "properties": { "corner_lot": { "const": false } } },
              "then": {
                "properties": {
                  "setbacks_m": {
                    "type": "object",
                    "not": {
                      "type": "object",
                      "required": ["secondary_front"]
                    }
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
  
